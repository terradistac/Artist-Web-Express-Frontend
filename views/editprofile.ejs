<!-- views/artworksubmit.ejs -->
<!doctype html>
<html>

<head>
    <title>Artist Web</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $.getJSON("http://localhost:8081/api/user/info/<%= user._id %>", function (data) {
                $("#name").attr("value", data.data.name);
                $("#biography").val(data.data.biography);
            })
        })
    </script>
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>

<body>
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1>
                <span class="fas fa-edit"></span> Edit Profile</h1>

            <!-- show any messages that come back with submission -->
            <% if (success) { %>
                <div class="alert alert-success">Upload successful.</div>
                <% } %>
                    <% if (success > 0 && !success) { %>
                        <div class="alert alert-warning">Upload failed. Please try again.</div>
                        <% } %>

                            <!-- UPLOAD FORM -->
                            <form action="http://localhost:8081/api/user/info/<%= user._id %>" method="post">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" id="name" name="name">
                                </div>
                                <div class="form-group">
                                    <div class="input-group-prepend">
                                        <label>Biography</label>
                                    </div>
                                    <textarea class="form-control" id="biography" name="biography"></textarea>
                                    <br>
                                    <button type="submit" class="btn btn-dark btn-lg">Submit</button>
                            </form>

                            <hr>

                            <p>Go back to your
                                <a href="/profile">profile</a>.</p>

                            </div>

        </div>
</body>

</html>